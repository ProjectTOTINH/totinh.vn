doctype 5
html
  head
    meta(http-equiv="Content-Type",content="text/html; charset=utf-8")
    meta(name="author", content="totinhTeam")
    meta(property="og:url", content="http://totinh.vn")
    - var titleVi = "totinh - nơi chia sẻ yêu thương"
    - var titleEn = "totinh - where you can share your love"
    if lang == "vn"
      title= titleVi
      meta(property="og:title", content="#{titleVi}")
    else
      title= titleEn
      meta(property="og:title", content="#{titleEn}")
      
    script(type="text/javascript", src='/js/libs/jquery.min.js')
    script(type="text/javascript", src='/js/libs/jquery-ui-1.9.2.min.js')
    script(type="text/javascript", src='/js/libs/require.js')
    link(href='/css/style.css', rel='stylesheet')
    
    block headerBlock
    
  body
    input#server_language(type="hidden",value="#{lang}")
    script(type="text/javascript")
      require.config({
        baseUrl: "/js/modules"
        , paths: { 
          'jquery': '../libs/jquery.min'
          , 'backbone': '../libs/backbone'
          , 'underscore': '../libs/underscore'
          , 'text': '../libs/text'
          , 'mediator': '../libs/mediator-2'
          , 'i18n': '../libs/i18n'
        }
      });
      
      function getNameWithTimestamp(name) {
        return name + '#{timestamp}';
      }
      
      function getJSFileNameWithTimestamp(name) {
        return getNameWithTimestamp(name) + '.js';
      }
      
      function getNameTempFileWithTimestamp(name) {
        return getNameWithTimestamp(name) + '.temp';
      }
      
    center
      .container
        block mainContentBlock